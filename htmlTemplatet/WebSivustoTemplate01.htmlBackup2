  <script charset="ISO-8859-1">
    function KuvalleUusiKuvaTeksti( AlkuperainenTeksti, KuvaTiedostoPolkuineen ){

    var KuvaTekstiaPromptista=prompt("Kirjoita kuvateksti", AlkuperainenTeksti );

    $.ajax({
      type: "POST",
      url: "AjaxToiminnot/PaivitaKuvanTekstit01.php",
      data: {KuvaPolkuineen:KuvaTiedostoPolkuineen , KuvaTeksti:KuvaTekstiaPromptista }
    }).done(function( result ) {
      $("#PHPnPalaute").html( " Annoit kuvatekstiksi " + KuvaTekstiaPromptista + " phplta vastaus  " + result );
    });
  }
  </script>  
  
  
